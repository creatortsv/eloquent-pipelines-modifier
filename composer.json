{
    "name": "creatortsv/eloquent-pipelines-modifier",
    "type": "library",
    "license": "MIT",
    "description": "",
    "authors": [
        {
            "name": "creatortsv",
            "email": "creatortsv@yandex.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "laravel/framework": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Creatortsv\\EloquentPipelinesModifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs --standard=PSR2 src/",
            "./vendor/bin/phpcs --standard=PSR2 tests/"
        ],
        "test": [
            "./vendor/bin/phpunit -v --testdox --coverage-text --colors=always --configuration phpunit.xml"
        ]
    }
}
